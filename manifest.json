{
  "manifest_version": 3,
  "name": "Absolute Time",
  "version": "0.0.1",
  "description": "Converts GitHub's relative time format to absolute datetime display",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Absolute Time Settings",
    "default_popup": "pages/popup.html"
  },
  "options_page": "pages/options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
